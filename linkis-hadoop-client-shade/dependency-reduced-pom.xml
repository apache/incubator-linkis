      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <shadeSourcesContent>true</shadeSourcesContent>
          <shadedArtifactAttached>false</shadedArtifactAttached>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/maven/**</exclude>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>org.slf4j:*</exclude>
              </excludes>
            </filter>
          </filters>
          <relocations>
            <relocation>
              <pattern>org.apache.html.dom</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.html.dom</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.hadoop</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.hadoop</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.commons</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.commons</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.google</pattern>
              <shadedPattern>org.apache.linkis.shade.com.google</shadedPattern>
            </relocation>
            <relocation>
              <pattern>io.netty</pattern>
              <shadedPattern>org.apache.linkis.shade.io.netty</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.curator</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.curator</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.htrace</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.htrace</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.xerces</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.xerces</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.zookeeper</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.zookeeper</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.wml</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.wml</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.yetus</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.yetus</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.checkerframework</pattern>
              <shadedPattern>org.apache.linkis.shade.org.checkerframework</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.apache.jute</pattern>
              <shadedPattern>org.apache.linkis.shade.org.apache.jute</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javax.activation</pattern>
              <shadedPattern>org.apache.linkis.shade.javax.activation</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javax.servlet.jsp</pattern>
              <shadedPattern>org.apache.linkis.shade.javax.servlet.jsp</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javax.el</pattern>
              <shadedPattern>org.apache.linkis.shade.javax.el</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javax.xml</pattern>
              <shadedPattern>org.apache.linkis.shade.javax.xml</shadedPattern>
            </relocation>
            <relocation>
              <pattern>javax.activation</pattern>
              <shadedPattern>org.apache.linkis.shade.javax.activation</shadedPattern>
            </relocation>
            <relocation>
              <pattern>google.protobuf</pattern>
