<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>linkis</artifactId>
        <groupId>com.webank.wedatasphere.linkis</groupId>
        <version>1.0.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>linkis-engineplugin-datax</artifactId>
    <packaging>pom</packaging>

    <modules>
        <module>linkis-datax-core</module>
        <module>engines/linkis-datax-elasticsearchwriter</module>
        <module>engines/linkis-datax-textfilereader</module>
        <module>linkis-datax-assembly</module>
        <module>engines/linkis-datax-ftpreader</module>
        <module>engines/linkis-datax-ftpwriter</module>
        <module>engines/linkis-datax-gpdbwriter</module>
        <module>engines/linkis-datax-hdfsreader</module>
        <module>engines/linkis-datax-hdfswriter</module>
        <module>engines/linkis-datax-mysqlreader</module>
        <module>engines/linkis-datax-mysqlwriter</module>
        <module>engines/linkis-datax-oraclereader</module>
        <module>engines/linkis-datax-oraclewriter</module>
        <module>engines/linkis-datax-postgresqlreader</module>
        <module>engines/linkis-datax-textfilewriter</module>
        <module>linkis-datax-entrance</module>
    </modules>
    <properties>
        <datax.version>3.0.0</datax.version>
        <datax_lib.version>0.0.1-SNAPSHOT</datax_lib.version>
        <slf4j-api-version>1.7.25</slf4j-api-version>
        <logback-classic-version>1.2.3</logback-classic-version>
        <fastjson-version>1.2.68</fastjson-version>
        <commons-math3-version>3.1.1</commons-math3-version>
        <guava-version>16.0.1</guava-version>
        <gson-version>2.8.2</gson-version>
        <commons-compress-version>1.19</commons-compress-version>
        <commons-io>2.4</commons-io>
        <commons-pool>1.6</commons-pool>
        <commons-configuration-version>1.10</commons-configuration-version>
        <commons-cli-version>1.2</commons-cli-version>
        <commons-beanutils>1.9.4</commons-beanutils>
        <commons.lang3.version>3.4</commons.lang3.version>
        <commons-codec.version>1.11</commons-codec.version>
        <commons-exec.version>1.3</commons-exec.version>
        <datax.engine.version>3.0.0</datax.engine.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>