<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.webank.wedatasphere.linkis.manager.dao.LockManagerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.webank.wedatasphere.linkis.manager.common.entity.persistence.PersistenceLock">
        <id column="ID" property="id"/>
        <result column="lock_object" property="lockObject"/>
        <result column="time_out" property="timeOut"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
        <result column="updator" property="updator"/>
        <result column="creator" property="creator"/>
    </resultMap>

    <insert id="lock">
        insert into linkis_cg_manager_lock (lock_object, time_out, update_time, create_time) values(#{jsonObject}, #{timeOut}, now(), now())
    </insert>

    <delete id="unlock">
        delete  from linkis_cg_manager_lock where lock_object = #{jsonObject}
    </delete>

    <select id="getAll" resultMap="BaseResultMap">
        select * from  linkis_cg_manager_lock
    </select>



</mapper>